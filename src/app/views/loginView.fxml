<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="app.controllers.LoginController" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml">
    <top>
        <fx:include source="topBar.fxml" fx:id="topBar"/>
    </top>

    <left>
        <VBox styleClass="driver-login" alignment="CENTER">
            <Label fx:id="user"/>
        </VBox>
    </left>

    <center>
        <VBox styleClass="driver-login" alignment="CENTER_LEFT" spacing="15">
            <Label text="Username"/>
            <TextField fx:id="usernameTextField"/>
            <Label text="Password"/>
            <PasswordField fx:id="passwordTextField"/>
            <Button text="Start Car" onAction="#handleLoginAction"/>
        </VBox>
    </center>

</BorderPane>